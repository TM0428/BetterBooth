{
    "manifest_version": 3,
    "name": "__MSG_Name__",
    "default_locale": "ja",
    "version": "0.5.3",
    "description": "__MSG_Description__",
    "icons": {
        "128": "icon/icon-128.png",
        "400": "icon/icon-400.png"
    },
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "/src/option/option.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://booth.pm/*/browse/*",
                "*://booth.pm/*/search/*",
                "*://booth.pm/*/items*",
                "*://accounts.booth.pm/wish_lists*",
                "*://booth.pm/ja",
                "*://booth.pm/en",
                "*://booth.pm/ko",
                "*://booth.pm/zh-cn",
                "*://booth.pm/zh-tw"
            ],
            "js": [
                "js/search_item_filter.js"
            ],
            "css": [
                "css/search.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.booth.pm/items/*",
                "*://*.booth.pm/*/items/*",
                "*://booth.pm/*/items/*"
            ],
            "exclude_matches": [
                "*://accounts.booth.pm/*",
                "*://manage.booth.pm/*",
                "*://checkout.booth.pm/*",
                "*://*.booth.pm/items/*.json"
            ],
            "js": [
                "js/custom_item.js"
            ],
            "css": [],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.booth.pm/*"
            ],
            "exclude_matches": [
                "*://booth.pm/carts/",
                "*://accounts.booth.pm/*",
                "*://manage.booth.pm/*",
                "*://checkout.booth.pm/*"
            ],
            "js": [
                "js/content.js"
            ],
            "css": [
                "css/content.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://checkout.booth.pm/orders*"
            ],
            "js": [
                "js/purchase.js"
            ]
        },
        {
            "matches": [
                "*://*.booth.pm/*"
            ],
            "exclude_matches": [
                "*://booth.pm/*",
                "*://accounts.booth.pm/*",
                "*://manage.booth.pm/*",
                "*://checkout.booth.pm/*"
            ],
            "js": [
                "js/custom_shop.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.booth.pm/"
            ],
            "exclude_matches": [
                "*://booth.pm/carts/",
                "*://accounts.booth.pm/*",
                "*://manage.booth.pm/*",
                "*://checkout.booth.pm/*"
            ],
            "js": [
                "js/itemlist_sort.js"
            ],
            "css": [
                "css/itemlist_sort.css"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": [
          "/src/popup/popup.html"
        ],
        "matches": [
          "*://*.booth.pm/*"
        ]
    },
    {
        "resources": [
            "js/module/chrome_storage.js",
            "js/module/shop_data.js",
            "js/module/shop.js",
            "js/module/filter_data.js",
            "js/module/item_data.js",
            "js/module/item.js",
            "js/module/settings_data.js",
            "js/module/extended_settings.js",
            "js/module/search_settings.js"
        ],
        "matches": ["<all_urls>"]
    }]
}